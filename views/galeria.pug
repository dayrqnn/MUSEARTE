extends layout

block content
  .gallery-container
    h1 Galería de Arte
    p Explora algunas de nuestras obras destacadas.

    // Formulario de búsqueda
    form(action='/galeria', method='get')
      input(type='text', name='query', placeholder='Buscar obra o autor', value= query)
      button(type='submit') Buscar

    .gallery-grid
      each obra in obras
        .card
          a(href='/obra/' + obra.id)
            img(src=obra.imagen, alt=obra.titulo)
          .card-body
            h2= obra.titulo
            p= obra.descripcion
